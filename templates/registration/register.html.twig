{% extends 'base_register.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<h1 >S'inscrire</h1>
{{ form_errors(form) }}
{{ form_start(registrationForm) }}
    {{ form_row(registrationForm.nom, { label: 'Nom' }) }}
    {{ form_row(registrationForm.prenom, { label: 'Prénom' }) }}
    {{ form_row(registrationForm.status, {label: 'Statut' }) }}
    {{ form_row(registrationForm.date_entree, {label: 'Date d\'entrée'})}}
    {{ form_row(registrationForm.email, { label: 'E-mail' }) }}
    {{ form_row(registrationForm.plainPassword.first, { label: 'Mot de passe' }) }}
    {{ form_row(registrationForm.plainPassword.second, { label: 'Confirmation du mot de passe' }) }}
    {{ form_row(registrationForm.roles, { label: 'Rôle' }) }}
<br>
<button type="submit" class="button button-submit">Continuer</button>
<br>
{{ form_end(registrationForm) }}
<br>
<div class="form-footer">
        <a href="{{ path('app_projets') }}">Vous avez déjà un compte ?</a>
</div>
{% endblock %}
